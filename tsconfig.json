{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "index.ts", "src/types.ts"],
  "exclude": ["node_modules"]
}
