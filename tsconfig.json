{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "index.ts", "src/types.ts"],
    "exclude": ["node_modules"]
}
